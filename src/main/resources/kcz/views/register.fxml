<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="324.0" prefWidth="294.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="kcz.controller.RegisterController">
    <children>
        <VBox alignment="CENTER" layoutX="75.0" layoutY="58.0" spacing="10">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Register" />
            <TextField fx:id="newUsernameField" promptText="New Username" />
            <PasswordField fx:id="newPasswordField" promptText="Password" />
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" />
            <Button onAction="#handleRegister" text="Register" />
            <Button onAction="#handleCancel" text="Cancel" />
        </VBox>
    </children>
</AnchorPane>
