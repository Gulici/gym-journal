<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="kcz.controller.AddUserStatController">
    <Label text="Add new stat" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextField fx:id="weightField" promptText="Weight (kg)" />
    <TextField fx:id="heightField" promptText="Height (cm)" />

    <HBox spacing="10">
        <Button text="Dodaj" onAction="#handleAddStat" />
        <Button text="Anuluj" onAction="#handleCancel" />
    </HBox>
</VBox>

