<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="333.0" prefWidth="370.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="kcz.controller.LoginController">
    <children>
        <VBox alignment="CENTER" layoutX="100" layoutY="80" spacing="10">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Gym Journal" />
            <TextField fx:id="username" promptText="Username" />
<!--            <PasswordField fx:id="password" promptText="Password" />-->
            <Button onAction="#handleLogin" text="Login" />
            <Button onAction="#openRegisterWindow" text="Register" />
            <Label fx:id="errorLabel" textFill="red" visible="false" />
        </VBox>
    </children>
</AnchorPane>
